<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission to query and launch other apps (Termux, VNC viewer) -->
    <queries>
        <package android:name="com.termux" />
        <package android:name="com.gaurav.avnc" />
        <package android:name="com.realvnc.viewer.android" />
        <package android:name="com.iiordanov.bVNC" />
    </queries>

    <uses-permission android:name="com.termux.permission.RUN_COMMAND" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProotLauncher"
        tools:targetApi="34">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProotLauncher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/settings_title"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".SetupGuideActivity"
            android:exported="false"
            android:label="@string/setup_guide_title"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>
